<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.commentary.CommentaryFragment">

    <TextView
        android:id="@+id/league_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:elevation="2dp"
        android:fontFamily="@font/barlow_condensed_medium"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Premier League" />

    <FrameLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/header_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_team_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="@id/result"
        app:layout_constraintEnd_toStartOf="@id/result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/result" />

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/barlow_condensed_medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/home_team_logo"
        app:layout_constraintStart_toStartOf="@id/home_team_logo"
        app:layout_constraintTop_toBottomOf="@id/home_team_logo"
        tools:text="Man United" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/barlow_condensed_bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/header_layout"
        app:layout_constraintEnd_toEndOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="@id/header_layout"
        tools:text="3 - 2" />

    <ImageView
        android:id="@+id/away_team_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="@id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/result"
        app:layout_constraintTop_toTopOf="@id/result" />

    <TextView
        android:id="@+id/away_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/barlow_condensed_medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/away_team_logo"
        app:layout_constraintStart_toStartOf="@id/away_team_logo"
        app:layout_constraintTop_toBottomOf="@id/away_team_logo"
        tools:text="Winchester" />

</androidx.constraintlayout.widget.ConstraintLayout>